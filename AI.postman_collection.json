							"// Function to generate a random string of letters\r",
							"function randomString(length) {\r",
							"    const chars = \"abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ\";\r",
							"    let result = \"\";\r",
							"    for (let i = 0; i < length; i++) {\r",
							"        result += chars.charAt(Math.floor(Math.random() * chars.length));\r",
							"    }\r",
							"    return result;\r",
							"}\r",
							"\r",
							"// Generate a random username of 8 letters\r",
							"const randomUsername = randomString(8);\r",
							"pm.environment.set(\"randomUsername\", randomUsername);\r",
							"\r",
							"// Optional: random password (letters + numbers)\r",
							"const randomPassword = randomString(8) + Math.floor(Math.random() * 1000);\r",
							"pm.environment.set(\"randomPassword\", randomPassword);\r",
							"\r",
							"console.log(\"Generated username:\", randomUsername);\r",
							"console.log(\"Generated password:\", randomPassword);\r",
